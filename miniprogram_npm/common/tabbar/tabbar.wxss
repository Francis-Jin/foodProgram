/* miniprogram_npm/common/tabbar/tabbar.wxss */

.isIpx{
    padding-bottom: 40rpx;
}

.tabbar_box{
  position: fixed;
  bottom:0;
  height: 100rpx;
  width:100%;
  padding-top: 10rpx;
  border-top: 1rpx solid #eeeeee;
  background: #fff;
  z-index: 9;
  display: flex;
  justify-content: space-around;
}
.cart_relative{
    position: relative;
}

.cartNum{
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    line-height: 40rpx;
    background: red;
    color: #fff;
    right: -10rpx;
    top: 4rpx;
    border-radius: 100%;
}

.yuyue{
    position: relative;
    text-align: center;
}
.yuyue image{
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    left: 50%;
    margin-left: -50rpx;
    top: -30rpx;
    z-index: 3;
}
.tabbar_item{
  text-align: center;
  font-size: 20rpx;
  padding-top: 10rpx;
}

/* 预约日期时间选择. */
.seletedDateAndTime{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.8);
    z-index: 20;
}

.content_wrap{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 50%;
    background: #fff;
    border-radius: 40rpx 40rpx 0 0;
}


.van-picker__columns{
    background: red;
}
.selectedTimeWrap .van-picker__columns,
.selectedTimeWrap .van-picker-column{
    height: 300rpx !important;
}

.dz{
    background: linear-gradient(60deg, #FFA835, #FC9145);
    width: 100rpx;
    height: 100rpx;
    color: #fff;
    text-align: center;
    line-height: 100rpx;
    font-size: 30rpx;
    border-radius: 100%;
    position: relative;
    top: -30rpx;
}