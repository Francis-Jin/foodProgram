/* pages/appointment_today/appointment_today.wxss */
.footer_btn{
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
}

.paySuccess {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

.paySuccess .success {
    position: absolute;
    left: 50%;
    top: 38%;
    width: 460rpx;
    margin-left: -230rpx;
    background: #fff;
    color: #515151;
    text-align: center;
    border-radius: 20rpx;
    overflow: hidden;
}

.cancel {
    position: absolute;
    left: 50%;
    bottom: 20rpx;
    width: 460rpx;
    margin-left: -230rpx;
    background: #fff;
    height: 100rpx;
    text-align: center;
    color: #515151;
    line-height: 100rpx;
    border-radius: 20rpx;
}