/* pages/food_details/food_details.wxss */

.food_name {
    position: absolute;
    text-align: center;
    white-space: pre-wrap;
    left: 10%;
    top: 60rpx;
    width: 50rpx;
    font-weight: 400;
}
.btnShare{
    background: #fff;
    color: #FC812B;
}

.selected {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    right: 40rpx;
    top: 50%;
    margin-top: -20rpx;
}

.selected.border1 {
    border: 1rpx solid #e3e3e3;
}

.cart {
    position: fixed;
    left: 120rpx;
    bottom: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}

.cart_icon {
    position: absolute;
    right: 0;
    top: 0;
    width: 100rpx;
    height: 100rpx;
    background: #fff;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
}

.cart_icon image {
    width: 60%;
    height: 60%;
    vertical-align: middle;
}

.buy_number {
    position: absolute;
    width: 42rpx;
    height: 40rpx;
    border-radius: 50%;
    background: red;
    font-size: 24rpx;
    right: -6rpx;
    top: -6rpx;
    line-height: 42rpx;
    text-align: center;
    color: #fff;
}

/** 引导蒙层. */

.guideMongolia {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 10;
}

.guideContent1 {
    position: absolute;
    width: 300rpx;
    height: 200rpx;
    left: 100rpx;
}

.guideContent2 {
    position: absolute;
    width: 300rpx;
    height: 330rpx;
    left: 60rpx;
}

.know {
    position: absolute;
    width: 240rpx;
    height: 100rpx;
    left: 50%;
    margin-left: -120rpx;
    bottom: 100rpx;
}

/** 加入购物车小球动画样式. */

.good_box {
    width: 40px;
    height: 40px;
    position: fixed;
    border-radius: 50%;
    overflow: hidden;
    left: 50%;
    top: 50%;
    z-index: 99;
    border: 1px solid rgba(0, 116, 255, 0.61);
    background: rgba(120, 188, 255, 0.2);
}

.good_box image {
    display: block;
    width: 100%;
    height: 100%;
}

/* 底部栏css. */
.footerBarBtn{
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 2;
    width: 100%;
    background: #fff;
}
