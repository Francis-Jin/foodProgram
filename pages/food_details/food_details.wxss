/* pages/food_details/food_details.wxss */

.food_name {
    position: absolute;
    text-align: center;
    white-space:pre-wrap;
    left: 10%;
    top: 60rpx;
    width: 50rpx;
    font-weight: 400;
}
.selected{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    right: 40rpx;
    top: 50%;
    margin-top: -30rpx;
}

.selected.border1{
    border: 1rpx solid #E3E3E3;
}

.cart{
    position: fixed;
    right: 40rpx;
    bottom: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}
.cart_icon{
    position: absolute;
    right: 0;
    top: 0;
    width: 100rpx;
    height: 100rpx;
    background: #fff;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
}
.cart_icon image{
    width: 60%;
    height: 60%;
    vertical-align: middle;
}
.buy_number{
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background: red;
    right: -6rpx;
    top: -6rpx;
    line-height: 40rpx;
    text-align: center;
    color: #fff;
}