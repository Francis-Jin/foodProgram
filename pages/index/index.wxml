<!--index.wxml-->

<view class="container">

    <view class="width_100 height_fixed_160 relative">
        <view class="absolute_100">
            <image class="width_height_100" src="/images/imgs/index_top_img.png" mode="aspectFit"></image>
        </view>
        <view class="absolute_100 z_index_1 flex">
            <view class="width_40 relative">
                <view class="width_fixed_90 height_fixed_90 absolute">
                    <view class="h line" style="transform: rotate({{hourDeg}}deg);"></view>
                    <view class="m line" style="transform: rotate({{minuteDeg}}deg);"></view>
                    <view class="s line" style="transform: rotate({{secondDeg}}deg);"></view>
                    <view class="dot line"></view>
                </view>
            </view>
            <view class="width_60">
                <view class="color_fff font_size_26 box_sizing padding_top_20 padding_right_20 font_weight custom_family">
                    <text>辰时</text>
                    <text class="margin_left_10 margin_right_10">·</text>
                    <text>胃经当令</text>
                </view>
                <view class="color_fff font_size_14 box_sizing padding_right_20 custom_family">
                    <text>太阳升起，阳气初生，吃早餐</text>
                </view>
                <view class="margin_top_30 text_right flex font_weight_300 color_39 flex_space_between bottom_0">
                    <view class="line_height_40 font_size_18 margin_right_10">
                        <text>7:00-9:00</text>
                    </view>
                    <view class="margin_right_30 color_39 font_size_14">
                        <view>午后餐</view>
                        <view>Afternoon meal</view>
                    </view>
                </view>
            </view>
        </view>
    </view>

    <view class="lists margin_top_20">
        <view class="lists_wrap flex flex_space_between box_sizing padding_left_right_20">
            <view class="left_content box_sizing width_50 padding_right_10">

                <block wx:for="{{listsLeft}}" wx:key="index">

                    <view wx:if="{{item.category == 2}}" class="item cs_item border_radius_right_left box_shadow overflow_hidden height_fixed_200 relative" data-itemId="{{item.id}}" data-type="1" bindtap="topPageDetails">
                        <view class="font_size_0 box_sizing padding_left_right_10">
                            <image class="max_width_100" src="{{urlBefore + item.cover}}" mode="aspectFit"></image>
                        </view>
                        <view class="width_100 text_right" style="position:absolute; right:10rpx; bottom:20rpx;">
                            <van-rate value="{{ item.star }}" size="{{ 20 }}" allow-half color="#FCBA35" void-color="#fff" void-icon="star" />
                        </view>
                    </view>

                    <view wx:if="{{item.category == 1}}" class="item item_foods_one border_radius_right_left box_shadow overflow_hidden" data-itemId="{{item.id}}" data-type="2" bindtap="topPageDetails">
                        <view class="font_size_0 box_sizing padding_10 height_fixed_160 bg_fbf">
                            <image class="width_100 height_100" src="{{urlBefore + item.cover}}" mode="aspectFit"></image>
                        </view>
                        <view class="width_100 box_sizing padding_left_right_10">
                            <view class="font_size_16 font_weight_600 line_height_30">
                                <text>{{item.name}}</text>
                            </view>
                            <view class="font_size_12 color_999 overflow1 line_height_30">
                                <text>{{item.intro}}</text>
                            </view>
                            <view class="flex flex_space_between padding_bottom_10 relative">
                                <view class="font_size_12 line_height_30 overflow1">
                                    <text class="tip color_999" wx:for="{{item.dimCommons}}" wx:for-item="tipsItem" wx:for-index="index2" wx:key="index2">{{tipsItem.name}}</text>
                                </view>
                                <view class="price">
                                    <text class="del_line color_999 margin_right_10 font_size_12">￥{{item.marketPrice}}</text>
                                    <text class="color_ff6 font_size_12">￥</text>
                                    <text class="color_ff6 font_size_18">{{item.price}}</text>
                                </view>
                            </view>
                        </view>
                    </view>

                    <view wx:if="{{item.category == 3}}" class="item item_foods_one border_radius_right_left box_shadow overflow_hidden" data-itemId="{{item.id}}" data-type="3" bindtap="topPageDetails">
                        <view class="font_size_0 box_sizing padding_10 height_fixed_140 bg_fbf">
                            <image class="width_100 height_100" src="{{item.imgUrl}}" mode="aspectFit"></image>
                        </view>
                        <view class="width_100 box_sizing padding_left_right_10">
                            <view class="font_size_16 font_weight_600 line_height_30">
                                <text>{{item.name}}</text>
                            </view>
                        </view>
                    </view>

                </block>

            </view>

            <view class="right_content box_sizing width_50 padding_left_10">

                <block wx:for="{{listsRight}}" wx:key="index">

                    <view wx:if="{{item.category == 2}}" class="item cs_item border_radius_right_left box_shadow overflow_hidden height_fixed_200 relative" data-itemId="{{item.id}}" data-type="1" bindtap="topPageDetails">
                        <view class="font_size_0 box_sizing padding_left_right_10">
                            <image class="max_width_100" src="{{urlBefore + item.cover}}" mode="aspectFit"></image>
                        </view>
                        <view class="width_100 text_right" style="position:absolute; right:10rpx; bottom:20rpx;">
                            <van-rate value="{{ item.star }}" size="{{ 20 }}" allow-half color="#FCBA35" void-color="#fff" void-icon="star" />
                        </view>
                    </view>

                    <view wx:if="{{item.category == 1}}" class="item item_foods_one border_radius_right_left box_shadow overflow_hidden" data-itemId="{{item.id}}" data-type="2" bindtap="topPageDetails">
                        <view class="font_size_0 box_sizing padding_10 height_fixed_160 bg_fbf">
                            <image class="width_100 height_100" src="{{urlBefore + item.cover}}" mode="aspectFit"></image>
                        </view>
                        <view class="width_100 box_sizing padding_left_right_10">
                            <view class="font_size_16 font_weight_600 line_height_30">
                                <text>{{item.name}}</text>
                            </view>
                            <view class="font_size_12 color_999 overflow1 line_height_30">
                                <text>{{item.intro}}</text>
                            </view>
                            <view class="flex flex_space_between padding_bottom_10 relative">
                                <view class="font_size_12 line_height_30 overflow1">
                                    <text class="tip color_999" wx:for="{{item.dimCommons}}" wx:for-item="tipsItem" wx:for-index="index2" wx:key="index2">{{tipsItem.name}}</text>
                                </view>
                                <view class="price">
                                    <text class="del_line color_999 margin_right_10 font_size_12">￥{{item.marketPrice}}</text>
                                    <text class="color_ff6 font_size_12">￥</text>
                                    <text class="color_ff6 font_size_18">{{item.price}}</text>
                                </view>
                            </view>
                        </view>
                    </view>

                    <view wx:if="{{item.category == 3}}" class="item item_foods_one border_radius_right_left box_shadow overflow_hidden" data-itemId="{{item.id}}" data-type="3" bindtap="topPageDetails">
                        <view class="font_size_0 box_sizing padding_10 height_fixed_140 bg_fbf">
                            <image class="width_100 height_100" src="{{item.imgUrl}}" mode="aspectFit"></image>
                        </view>
                        <view class="width_100 box_sizing padding_left_right_10">
                            <view class="font_size_16 font_weight_600 line_height_30">
                                <text>{{item.name}}</text>
                            </view>
                        </view>
                    </view>


                </block>

            </view>

        </view>

    </view>





</view>