/* 菜单按钮. */

.menu_btn{
    /* position: absolute;
    right: 20rpx;
    bottom: 100rpx; */
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 100%;
    background: #8AD4EA;
    color: #fff;
    text-align: center;
    z-index: 10;
}

.menu_lists_wrap{
    position: fixed;
    left:0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 11;
}

.menu_item{
    position: relative
}

.menu_item::after{
    content: "";
    display: block;
    position: absolute;
    left: -10rpx;
    top: 25%;
    width: 1rpx;
    height: 50%;
    background: linear-gradient(120deg, #46B5A7  40%, #55B1C9 60%);
}

.menu_item:nth-child(1):after{
    background: transparent;
}

.close_menu{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}
.menu_lists{
    position: absolute;
    width: 50%;
    right: 100rpx;
    top: 320rpx;
    border-radius: 20rpx;
    background: #fff;

}

/** 购物车按钮. */

.cart {
    position: fixed;
    left: 110rpx;
    bottom: 100rpx;
    height: 100rpx;
    z-index: 2;
    border-radius: 50rpx;
}

.cart_icon {
    position: absolute;
    right: 0;
    top: 0;
    width: 100rpx;
    height: 100rpx;
    background: #fff;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
}

.cart_icon image {
    width: 60%;
    height: 60%;
    vertical-align: middle;
}

.buy_number {
    position: absolute;
    width: 44rpx;
    height: 40rpx;
    font-size: 24rpx;
    border-radius: 50%;
    background: red;
    right: -6rpx;
    top: -6rpx;
    line-height: 44rpx;
    text-align: center;
    color: #fff;
}

/** 领优惠Modal. */

.discountModal {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 9999;
}

.content {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 400rpx;
    height: 500rpx;
    background: #fff;
    margin-left: -200rpx;
    margin-top: -250rpx;
    border-radius: 40rpx;
}

.close {
    position: absolute;
    width: 100%;
    left: 0%;
    bottom: -80rpx;
    text-align: center;
    vertical-align: middle;
    font-size: 0;
}

.discountModalText {
    width: 100%;
    height: 160rpx;
    position: absolute;
    left: 0;
    bottom: 80rpx;
    color: #ff6100;
    font-size: 40rpx;
    transform: rotate(-20deg);
}

.discountModalText .number {
    font-weight: bold;
    font-size: 100rpx;
    margin: 0 10rpx;
}

.discountModalText .more {
    font-size: 24rpx;
    background: linear-gradient(60deg, #fd8828, #fa6d35);
    color: #fff;
    padding: 20rpx 10rpx;
    border-radius: 50%;
    margin-left: 10rpx;
}

