/** 购物车按钮. */

.cart {
    position: fixed;
    right: 10rpx;
    bottom: 100rpx;
    height: 100rpx;
    z-index: 2;
    border-radius: 50rpx;
}

.cart_icon {
    position: absolute;
    right: 0;
    top: 0;
    width: 100rpx;
    height: 100rpx;
    background: #fff;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
}

.cart_icon image {
    width: 60%;
    height: 60%;
    vertical-align: middle;
}

.buy_number {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background: red;
    right: -6rpx;
    top: -6rpx;
    line-height: 40rpx;
    text-align: center;
    color: #fff;
}

/** 领优惠Modal. */

.discountModal {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 9999;
}

.content {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 400rpx;
    height: 500rpx;
    background: #fff;
    margin-left: -200rpx;
    margin-top: -250rpx;
    border-radius: 40rpx;
}

.close {
    position: absolute;
    width: 100%;
    left: 0%;
    bottom: -80rpx;
    text-align: center;
    vertical-align: middle;
    font-size: 0;
}

.discountModalText {
    width: 100%;
    height: 160rpx;
    position: absolute;
    left: 0;
    bottom:80rpx;
    color: #ff6100;
    font-size: 40rpx;
    transform: rotate(-20deg);
    
}
.discountModalText .number{
    font-weight: bold;
    font-size:100rpx;
    margin: 0 10rpx;
}

.discountModalText .more{
    font-size: 24rpx;
    background: linear-gradient(60deg, #fd8828, #fa6d35);
    color: #fff;
    padding:20rpx 10rpx;
    border-radius: 50%;
    margin-left: 10rpx;
}

