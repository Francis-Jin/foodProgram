/* pages/inputPassword/inputPassword.wxss */
.Toptitle{
  text-align: center;
  margin: 60rpx auto 46rpx;
  font-size: 26rpx;
}
.content{
  width: 660rpx;
  padding:0 45rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.iptbox{
  width: 110rpx;
  height: 96rpx;
  border:1rpx solid #ededed;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.iptbox:nth-child(n){
    border-right:none;
}
.iptbox:last-child{
   border-right:1rpx solid #ededed; 
}

.ipt{
  width: 0;
  height: 0;
}