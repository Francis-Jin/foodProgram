/* pages/login/login.wxss */
.btn{
    position: fixed;
    left: 50%;
    bottom: 50rpx;
    margin-left: -260rpx;
    width: 520rpx;
    height: 100rpx;
}
.btn .init{
    width: 250rpx;
}
.btn .init:first-child{
    background: #ededed;
    text-align: center;
    line-height: 100rpx;
    font-size: 28rpx;
    color: #999;
    border-radius: 20rpx;
}
.btn button{
    border: none;
    color: #fff;
    font-size: 28rpx;
    width: 100%;
    height: 100%;
    line-height: 100rpx;
    background: linear-gradient(60deg, #fd8828, #fa6d35);
}