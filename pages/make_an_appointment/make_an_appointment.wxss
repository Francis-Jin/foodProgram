/* pages/make_an_appointment/make_an_appointment.wxss */

.topBack {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 3;
    width: 100%;
}

.confirmBtn {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background-color: #fff;
}

.paySuccess {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

.paySuccess .success {
    position: absolute;
    left: 50%;
    top: 38%;
    width: 460rpx;
    margin-left: -230rpx;
    background: #fff;
    color: #515151;
    text-align: center;
    border-radius: 20rpx;
    overflow: hidden;
}

.cancel {
    position: absolute;
    left: 50%;
    bottom: 20rpx;
    width: 460rpx;
    margin-left: -230rpx;
    background: #fff;
    height: 100rpx;
    text-align: center;
    color: #515151;
    line-height: 100rpx;
    border-radius: 20rpx;
}

/* 平行四边样式 */

.absolute1 {
    top: 0;
    width: 400rpx;
    text-align: right;
    height: 100rpx;
    line-height: 100rpx;
    background: linear-gradient(to right, #fff 10%, #599998);
    z-index: 2;
}

.absolute2 {
    top:10rpx;
    width: 520rpx;
    text-align: right;
    height: 100rpx;
    background: linear-gradient(to right, #fff 40%, #4EBD8B);
}

.outside {
    position: absolute;
    left: -100rpx;
    /* box-sizing: border-box; */
    padding: 8rpx;
    transform: skewX(-45deg);
}

.inside {
    background: #fff;
    position: relative;
    box-sizing: border-box;
    padding-right: 50rpx;
    left: -6rpx;
}

.outside text {
    display: inline-block;
    transform: skewX(45deg);
}

.sectionMessage .item{
    border: 1rpx solid #ff6100;
    margin-right: 20rpx;
    margin-bottom:20rpx;
    color: #ff6100;
}

.sectionMessage .item.active{
    color: #fff;
    background: linear-gradient(60deg, #fd8828, #fa6d35);
}

.sectionMessage .item:nth-child(4n){
    margin-right: 0;
}