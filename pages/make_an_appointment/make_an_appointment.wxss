/* pages/make_an_appointment/make_an_appointment.wxss */

.topBack {
    position: fixed;
    left: 0;
    top: 0;
    z-index: 3;
    width: 100%;
}

.confirmBtn {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background-color: #fff;
}

.paySuccess {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
}

.paySuccess .success {
    position: absolute;
    left: 50%;
    top: 100rpx;
    width: 460rpx;
    margin-left: -230rpx;
    background: #fff;
    color: #515151;
    text-align: center;
    border-radius: 20rpx;
    overflow: hidden;
}

.cancel {
    position: absolute;
    left: 50%;
    bottom: 20rpx;
    width: 460rpx;
    margin-left: -230rpx;
    background: #fff;
    height: 100rpx;
    text-align: center;
    color: #515151;
    line-height: 100rpx;
    border-radius: 20rpx;
}
