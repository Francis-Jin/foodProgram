/* pages/make_up_list/make_up_list.wxss */

.food_name {
    position: absolute;
    text-align: center;
    white-space: pre-wrap;
    left: 10%;
    top: 60rpx;
    width: 50rpx;
    font-weight: 400;
    color: #fff;
}

.dot {
    position: relative;
}

.dot::after {
    content: " ";
    display: block;
    position: absolute;
    left: 0;
    top: 10rpx;
    width: 20rpx;
    height: 20rpx;
    background: #49cbc2;
    border-radius: 50%;
}

.cart {
    position: fixed;
    right: 40rpx;
    bottom: 100rpx;
    height: 100rpx;
    border-radius: 50rpx;
}

.cart_icon {
    position: absolute;
    right: 0;
    top: 0;
    width: 100rpx;
    height: 100rpx;
    background: #fff;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
}

.cart_icon image {
    width: 60%;
    height: 60%;
    vertical-align: middle;
}

.buy_number {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    background: red;
    right: -6rpx;
    top: -6rpx;
    line-height: 40rpx;
    text-align: center;
    color: #fff;
}

.overtime{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, .5);
    z-index: 2;
}
.overTime_content{
    position: absolute;
    left: 50%;
    top: 40%;
    width: 600rpx;
    min-height: 200rpx;
    background: #fff;
    border-radius: 20rpx;
    margin-left:-300rpx; 
}