<!--pages/order_details/order_details.wxml-->
<view class="container">
    <view hidden="true" class="flex flex_space_between line_height_40 topBack bg_fff" style="{{ isIpx ? 'padding-top:90rpx' : 'padding-top:40rpx'}}">
        <view class="width_30 box_sizing padding_left_10 color_333" bindtap="backOrderListsFn">
            <text class="iconfont icon-left2"></text>
        </view>
        <view class="width_30 text_center font_size_16 font_weight">
            <text>订单详情</text>
        </view>
        <view class="width_30"></view>
    </view>
    <view hidden="true" class="height_fixed_70"></view>
    <view class="padding_left_right_10 padding_bottom_30">

        <view class="background_bottom_liner padding_top_20 padding_bottom_20 margin_top_20 color_fff border_radius_right_left">

            <view wx:if="{{detailsInfo.status == 2 || detailsInfo.status == 3 || detailsInfo.status == 4 || detailsInfo.status == 5}}" class="text_center font_size_22 font_weight_600">
                <text class="margin_right_10">取餐号</text>
                <text>{{detailsInfo.takeMealCode}}</text>
            </view>
            <view class="text_center">
                <text class="margin_right_10">订单状态：</text>
                <text>{{detailsInfo.statusName}}</text>
            </view>
            <view wx:if="{{detailsInfo.status == 8}}" class="text_center">
                <count_down countTime="{{detailsInfo.countTime}}" color="#fff" align="center" size="60"></count_down>
            </view>
        </view>

        <view class="box_shadow border_radius_10 overflow_hidden margin_top_20 box_sizing padding_left_right_20 relative">
            <view class="flex flex_space_between line_height_50 border_bottom">
                <view class="font_size_16 font_weight_600 color_4dc">
                    <text>菜品清单</text>
                </view>
                <view>
                    <!-- <image class="width_fixed_20 height_fixed_20 vertical_middle margin_right_10 relative" style="top:-4rpx;" src="/images/icon/right@2x.png"></image> -->
                </view>
            </view>
            <view class="margin_top_10 padding_bottom_20">

                <view class="shopLists">

                    <view wx:for="{{detailsInfo.orderDetailList}}" wx:key="index" class="item border_bottom border_radius_10 flex padding_top_10 padding_bottom_10 relative ">
                        <view class="flex">
                            <view class="width_fixed_80 height_fixed_80">
                                <image class="width_height_100 border_radius_5" src="{{urlBefore + item.cover}}" mode="aspectFill"></image>
                            </view>
                            <view class="margin_left_10">
                                <view class="color_5151">
                                    <text>{{item.productName}}</text>
                                </view>
                                <view class="margin_top_40">
                                    <text class="margin_right_10 color_999 del_line"><text class="font_size_12">￥</text>{{item.marketPrice}}</text>
                                    <text class="color_ff6"><text class="font_size_12">￥</text>{{item.buyPrice}}</text>
                                </view>
                            </view>
                            <view class="color_666" style="position:absolute;right:10rpx;bottom:20rpx;">
                                <text>x</text>
                                <text>{{item.quantity}}</text>
                            </view>
                        </view>
                    </view>

                </view>

                <!-- 配菜信息 -->
                <view wx:if="{{detailsInfo.bookOrderIngredientVoList.length > 0}}" class="border_bottom">
                    <view class="flex flex_space_between line_height_40 border_bottom">
                        <view class="font_size_14 color_4dc">
                            <text>配菜</text>
                        </view>
                    </view>
                    <view>
                        <view wx:for="{{detailsInfo.bookOrderIngredientVoList}}" wx:key="index" class="item line_height_30 flex flex_space_between">
                            <view class="font_size_12 color_666">{{item.ingredientName}}</view>
                            <view class="font_size_12 color_FF8">￥{{item.price}}</view>
                        </view>
                    </view>
                </view>

                <!-- 订单信息 -->
                <view class="margin_top_10 line_height_30 font_size_12">
                    <view class="flex flex_space_between">
                        <view class="color_666">
                            <text>菜品数量</text>
                        </view>
                        <view class="text_right color_666">
                            <text>x{{detailsInfo.quantity}}</text>
                        </view>
                    </view>
                    <view wx:if="{{detailsInfo.productAmount > 0}}" class="flex flex_space_between">
                        <view class="color_666">
                            <text>菜品总额</text>
                        </view>
                        <view class="text_right color_666">
                            <text>￥{{detailsInfo.productAmount}}</text>
                        </view>
                    </view>
                    <view wx:if="{{detailsInfo.ingredientAmount > 0}}" class="flex flex_space_between">
                        <view class="color_666">
                            <text>配菜总额</text>
                        </view>
                        <view class="text_right color_666">
                            <text>￥{{detailsInfo.ingredientAmount}}</text>
                        </view>
                    </view>
                    <view wx:if="{{detailsInfo.deliveryMode == 2}}" class="flex flex_space_between">
                        <view class="color_666">
                            <text>配送费</text>
                        </view>
                        <view class="text_right color_666">
                            <text>￥{{detailsInfo.expressFee}}</text>
                        </view>
                    </view>
                    <view class="flex">
                        <view class="color_666">
                            <text>总计：</text>
                        </view>
                        <view class="text_right color_ff6 font_size_18">
                            <text>￥{{detailsInfo.orderAmount}}</text>
                        </view>
                    </view>
                    <!-- <view class="height_fixed_40"></view> -->
                </view>

            </view>
            <!-- <view class="line_height_50 text_center color_fff background_liner" style="position:absolute;left:0;bottom:0;width:100%;height:100rpx;">
                <text>{{detailsInfo.statusName}}</text>
            </view> -->
        </view>

        <view wx:if="{{detailsInfo.deliveryMode == 2 && detailsInfo.deliveryUserName != ''}}" class="margin_top_20 box_shadow border_radius_10">
            <view class="box_sizing border_radius_10 box_shadow padding_left_right_20 line_height_40 color_ff6">
                <text class="iconfont icon-shenfenxuanze font_weight relative" style="font-size:40rpx;top:6rpx"></text>
                <text class="font_size_16 margin_left_10">配送员</text>
            </view>
            <view class="box_sizing padding_left_right_20" data-tel="{{detailsInfo.deliveryUserPhone}}" bindtap="callTelFn">
                <view class="init flex flex_space_between line_height_50" data-type="1" bindtap="selectedFn">
                    <view>
                        <text class="iconfont icon-huabankaobei- font_weight_100 relative color_ff6" style="font-size:40rpx;top:6rpx"></text>
                        <text class="font_size_16 margin_left_10 color_5353 font_size_14">{{detailsInfo.deliveryUserName}}</text>
                    </view>
                    <view class="color_8484">
                        <text>{{detailsInfo.deliveryUserPhone}}</text>
                    </view>
                </view>
            </view>
        </view>

        <view class="box_shadow border_radius_10 margin_top_20 box_sizing padding_left_right_20 relative">
            <view class="margin_top_10 padding_top_5 padding_bottom_10">
                <!-- 订单信息 -->

                <view class="margin_top_10 line_height_30 font_size_12">

                    <view class="flex flex_space_between">
                        <view class="color_333">
                            <text>订单号</text>
                        </view>
                        <view class="text_right color_666">
                            <text>{{detailsInfo.id}}</text>
                        </view>
                    </view>
                    <view class="flex flex_space_between">
                        <view class="color_333">
                            <text>购买类型</text>
                        </view>
                        <view class="text_right color_666">
                            <text wx:if="{{detailsInfo.category == 1}}">单独购买</text>
                            <text wx:if="{{detailsInfo.category == 2}}">拼单购买</text>
                            <text wx:if="{{detailsInfo.category == 3}}">预约购买</text>
                        </view>
                    </view>
                    <view class="flex flex_space_between">
                        <view class="color_333">
                            <text>下单时间</text>
                        </view>
                        <view class="text_right color_666">
                            <text>{{detailsInfo.createTime}}</text>
                        </view>
                    </view>
                    <view class="flex flex_space_between">
                        <view class="color_333">
                            <text>支付方式</text>
                        </view>
                        <view class="text_right color_666">
                            <text wx:if="{{detailsInfo.payMethod==1}}">微信支付</text>
                            <text wx:if="{{detailsInfo.payMethod==2}}">VIP支付</text>
                        </view>
                    </view>

                    <view class="flex flex_space_between">
                        <view class="color_333">
                            <text>支付时间</text>
                        </view>
                        <view class="text_right color_666">
                            <text>{{detailsInfo.payTime == null ? '' : detailsInfo.payTime}}</text>
                        </view>
                    </view>
                    <view class="flex flex_space_between">
                        <view class="color_333">
                            <text>菜品金额</text>
                        </view>
                        <view class="text_right color_666">
                            <text>￥{{detailsInfo.productAmount}}</text>
                        </view>
                    </view>

                    <view wx:if="{{detailsInfo.payMethod==1}}" class="flex flex_space_between">
                        <view class="color_333">
                            <text>代金池减免</text>
                        </view>
                        <view class="text_right color_666">
                            <text>￥{{detailsInfo.couponDeduct}}</text>
                        </view>
                    </view>

                    <view class="flex flex_space_between">
                        <view class="color_333">
                            <text>配送费</text>
                        </view>
                        <view class="text_right color_666">
                            <text>￥{{detailsInfo.expressFee}}</text>
                        </view>
                    </view>

                    <view wx:if="{{detailsInfo.payMethod==2}}" class="flex flex_space_between">
                        <view class="color_333">
                            <text>VIP优惠</text>
                        </view>
                        <view class="text_right color_666">
                            <text>￥</text>
                            <text>{{detailsInfo.vipDeduct}}</text>
                        </view>
                    </view>

                    <view wx:if="{{detailsInfo.category == 3}}" class="flex flex_space_between">
                        <view class="color_333">
                            <text>标签</text>
                        </view>
                        <view class="text_right color_666">
                            <text></text>
                            <text>{{detailsInfo.bookLabel}}</text>
                        </view>
                    </view>

                    <view wx:if="{{detailsInfo.category == 3}}" class="flex flex_space_between">
                        <view class="color_333">
                            <text>预约时间</text>
                        </view>
                        <view class="text_right color_666">
                            <text>{{detailsInfo.getDinnerTime}}</text>
                        </view>
                    </view>

                    <view class="flex flex_space_between">
                        <view class="color_333">
                            <text>配送方式</text>
                        </view>
                        <view class="text_right color_666">
                            <text>{{detailsInfo.deliveryMode == 1 ? '到店自取' : '快递配送'}}</text>
                        </view>
                    </view>

                    <view wx:if="{{detailsInfo.deliveryMode ==1}}" class="flex flex_space_between">
                        <view class="color_333 get_address">
                            <text>自取地址</text>
                        </view>
                        <view class="color_666 box_sizing padding_left_20 line_height_20">
                            <text>{{detailsInfo.locationName}}</text>
                        </view>
                    </view>
                    <view wx:if="{{detailsInfo.deliveryMode == 2}}" class="flex flex_space_between">
                        <view class="color_333 get_address">
                            <text>配送地址</text>
                        </view>
                        <view class="color_666 box_sizing padding_left_20 line_height_20">
                            <text>{{detailsInfo.address}}</text>
                        </view>
                    </view>
                </view>
            </view>
        </view>

    </view>

    <view class="height_fixed_60"></view>
    <!-- 取消订单按钮 -->
    <!-- 1,2,3,4,8,12 -->
    <view wx:if="{{(detailsInfo.status == 1 && userInfo.id == detailsInfo.createUser) || (detailsInfo.status == 2 && userInfo.id == detailsInfo.createUser) || (detailsInfo.status == 3 && userInfo.id == detailsInfo.createUser) || (detailsInfo.status == 4 && userInfo.id == detailsInfo.createUser) || (detailsInfo.status == 8 && userInfo.id == detailsInfo.createUser) || (detailsInfo.status == 12 && userInfo.id == detailsInfo.createUser)}}"
        class="width_100 {{isIpx?'padding_bottom_20':''}} flex flex_space_between footerBtn bg_fff padding_top_10 padding_bottom_10 box_sizing padding_left_right_20">
        <view bindtap="cancleOrderFn" class="{{detailsInfo.status == 1 ? 'width_50 bg_999' : 'width_80 bg_f21'}} margin_auto line_height_50 text_center color_fff border_radius_5">
            <text>取消订单</text>
        </view>
        <view bindtap="payOrderFn" wx:if="{{detailsInfo.status == 1}}" class="width_50 margin_left_10 text_center line_height_50 relative z_index_5 background_yellow_liner color_fff border_radius_5">
            <text>去支付</text>
        </view>
    </view>
</view>


<!-- 弹出确认删除弹框. -->
<van-popup show="{{ cancelOrderShow }}" duration="{{0}}">
    <view class="border_radius_10 bg_fff overflow_hidden" style="width:460rpx;">
        <view class="height_fixed_50 line_height_50 text_center font_size_16 color_5353">
            <text>提示</text>
        </view>
        <view class="font_size_14 color_8484 text_center padding_bottom_20">
            <text>真的要狠心取消订单吗？</text>
        </view>
        <view class="flex flex_space_between">
            <view class="width_50 height_fixed_50 font_size_14 line_height_50 text_center color_5bc" bindtap="onCancelOrderFn">
                <text>取消</text>
            </view>
            <view class="width_50 height_fixed_50 font_size_14 line_height_50 text_center color_7a7a" bindtap="confirmCancelFn">
                <text>确定</text>
            </view>
        </view>
    </view>
</van-popup>

