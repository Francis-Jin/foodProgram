/* pages/recharge/recharge.wxss */
.content_recharge{
    position: absolute;
    left: 5%;
    top: 40rpx;
    width: 90%;
    min-height: 300rpx;
    background: #fff;
    border-radius: 20rpx;
}
.clickRecharge{
    position: fixed;
    left: 5%;
    bottom: 50rpx;
    width: 90%;
}

/* 支付成功. */

.pay_content {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 2;
    background: rgba(0, 0, 0, 0.5);
}

.pay_success {
    position: absolute;
    width: 400rpx;
    left: 50%;
    margin-left: -200rpx;
    background: #fff;
    top: 40%;
    text-align: center;
    border-radius: 20rpx;
}
.pay_success .text{
    padding-top: 30rpx;
    color: #333;
}

.pay_success .icon {
    line-height: 160rpx;
}

.pay_success image {
    width: 80rpx;
    height: 80rpx;
    vertical-align: middle;
}