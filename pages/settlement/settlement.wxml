<!--pages/settlement/settlement.wxml-->
<view class="container">

    <view class="padding_left_right_10 padding_bottom_30">

        <view class="border_radius_right_left height_fixed_180 overflow1 relative">
            <image class="width_100 height_100" src="/images/imgs/video.png"></image>
            <view class="food_name font_size_16 font_weight_600">
                <text>绿豆粥</text>
            </view>
        </view>

        <view class="box_shadow border_radius_20 overflow1 margin_top_20 box_sizing padding_left_right_20">
            <view class=" line_height_50 border_bottom">
                <image class="width_fixed_20 height_fixed_20 vertical_middle margin_right_10 relative" style="top:-2rpx;" src="/images/icon/tianchongxing-@2x.png"></image>
                <text class="color_5151">商品列表</text>
            </view>
            <view class="margin_top_10">

                <view class="item border_bottom border_radius_10 flex padding_top_10 padding_bottom_10 relative ">
                    <view class="flex">
                        <view class="width_fixed_80 height_fixed_80">
                            <image class="width_height_100 border_radius_5" src="/images/imgs/cook.png" mode="aspectFill"></image>
                        </view>
                        <view class="margin_left_10">
                            <view class="margin_top_10 color_5151">
                                <text>皮蛋瘦肉粥</text>
                            </view>
                            <view class="margin_top_30">
                                <text class="margin_right_10 color_e3 del_line"><text class="font_size_12">￥</text>18</text>
                                <text class="color_ff6"><text class="font_size_12">￥</text>18</text>
                            </view>
                        </view>
                        <view style="position:absolute;right:20rpx;bottom:20rpx;">

                            <view class="flex margin_top_20">
                                <view class="width_fixed_30 height_fixed_30 line_height_30 text_center font_size_24 color_e3" data-type="1" bindtap="addReduceFn">
                                    <image class="width_fixed_20 height_fixed_20" src="/images/icon/reduce.png"></image>
                                </view>
                                <view class="width_fixed_30 height_fixed_30 line_height_30 text_center">
                                    <text>{{buyNumber}}</text>
                                </view>
                                <view class="width_fixed_30 height_fixed_30 line_height_30 text_center font_size_24 color_e3" data-type="2" bindtap="addReduceFn">
                                    <image class="width_fixed_20 height_fixed_20" src="/images/icon/add.png "></image>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="item border_bottom border_radius_10 flex padding_top_10 padding_bottom_10 relative ">
                    <view class="flex">
                        <view class="width_fixed_80 height_fixed_80">
                            <image class="width_height_100 border_radius_5" src="/images/imgs/cook.png" mode="aspectFill"></image>
                        </view>
                        <view class="margin_left_10">
                            <view class="margin_top_10 color_5151">
                                <text>皮蛋瘦肉粥</text>
                            </view>
                            <view class="margin_top_30">
                                <text class="margin_right_10 color_e3 del_line"><text class="font_size_12">￥</text>18</text>
                                <text class="color_ff6"><text class="font_size_12">￥</text>18</text>
                            </view>
                        </view>
                        <view style="position:absolute;right:20rpx;bottom:20rpx;">

                            <view class="flex margin_top_20">
                                <view class="width_fixed_30 height_fixed_30 line_height_30 text_center font_size_24 color_e3" data-type="1" bindtap="addReduceFn">
                                    <image class="width_fixed_20 height_fixed_20" src="/images/icon/reduce.png"></image>
                                </view>
                                <view class="width_fixed_30 height_fixed_30 line_height_30 text_center">
                                    <text>{{buyNumber}}</text>
                                </view>
                                <view class="width_fixed_30 height_fixed_30 line_height_30 text_center font_size_24 color_e3" data-type="2" bindtap="addReduceFn">
                                    <image class="width_fixed_20 height_fixed_20" src="/images/icon/add.png "></image>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="item border_radius_10 flex padding_top_10 padding_bottom_10 relative ">
                    <view class="flex">
                        <view class="width_fixed_80 height_fixed_80">
                            <image class="width_height_100 border_radius_5" src="/images/imgs/cook.png" mode="aspectFill"></image>
                        </view>
                        <view class="margin_left_10">
                            <view class="margin_top_10 color_5151">
                                <text>皮蛋瘦肉粥</text>
                            </view>
                            <view class="margin_top_30">
                                <text class="margin_right_10 color_e3 del_line"><text class="font_size_12">￥</text>18</text>
                                <text class="color_ff6"><text class="font_size_12">￥</text>18</text>
                            </view>
                        </view>
                        <view style="position:absolute;right:20rpx;bottom:20rpx;">

                            <view class="flex margin_top_20">
                                <view class="width_fixed_30 height_fixed_30 line_height_30 text_center font_size_24 color_e3" data-type="1" bindtap="addReduceFn">
                                    <image class="width_fixed_20 height_fixed_20" src="/images/icon/reduce.png"></image>
                                </view>
                                <view class="width_fixed_30 height_fixed_30 line_height_30 text_center">
                                    <text>{{buyNumber}}</text>
                                </view>
                                <view class="width_fixed_30 height_fixed_30 line_height_30 text_center font_size_24 color_e3" data-type="2" bindtap="addReduceFn">
                                    <image class="width_fixed_20 height_fixed_20" src="/images/icon/add.png "></image>
                                </view>
                            </view>
                        </view>
                    </view>
                </view>

            </view>
        </view>

        <view class="box_shadow border_radius_20 overflow1 margin_top_20 box_sizing padding_left_right_20">
            <view class="flex flex_space_between line_height_50 border_bottom">
                <view>
                    <image class="width_fixed_20 height_fixed_20 vertical_middle margin_right_10 relative" style="top:-2rpx;" src="/images/icon/my@2x.png"></image>
                    <text class="color_5151">用餐地址选择</text>
                </view>
                <view>
                    <image class="width_fixed_20 height_fixed_20 vertical_middle margin_right_10 relative" style="top:-4rpx;" src="/images/icon/right@2x.png"></image>
                </view>
            </view>
            <view class="margin_top_10 padding_bottom_20">
                <input placeholder-style="color:#e3e3e3" placeholder="请输入用餐地址（目前只开放M区）" />
            </view>
        </view>

        <view class="box_shadow border_radius_20 overflow1 margin_top_20 box_sizing padding_left_right_20">
            <view class=" line_height_50 border_bottom">
                <image class="width_fixed_20 height_fixed_20 vertical_middle margin_right_10 relative" style="top:-2rpx;" src="/images/icon/my@2x.png"></image>
                <text class="color_5151">自取</text>
            </view>
            <view class="margin_top_10 padding_bottom_20">
                <text class="font_size_14 color_bab9">M区7栋1楼126号门面</text>
            </view>
        </view>

        <view class="box_shadow border_radius_20 overflow1 margin_top_20 box_sizing padding_left_right_20">
            <view class=" line_height_50 border_bottom">
                <image class="width_fixed_20 height_fixed_20 vertical_middle margin_right_10 relative" style="top:-2rpx;" src="/images/icon/peisongyue@2x.png"></image>
                <text class="color_5151">配送</text>
            </view>
            <view class="margin_top_10 padding_bottom_20">
                <view class="flex flex_space_between color_666 margin_bottom_10">
                    <view class="">
                        <text>皮蛋瘦肉粥x1</text>
                    </view>
                    <view>
                        <text class="font_size_12">X</text>
                        <text>2</text>
                    </view>
                </view>
                <view class="flex flex_space_between color_666 margin_bottom_10">
                    <view class="">
                        <text>皮蛋瘦肉粥x1</text>
                    </view>
                    <view>
                        <text class="font_size_12">X</text>
                        <text>1</text>
                    </view>
                </view>
            </view>
        </view>

        <!-- 说明文字 -->
        <view class="line_height_50 font_size_12 color_bab9 box_sizing padding_left_10 margin_bottom_30">
            <text>同个地址第一份配送费2元，多份每多一份加1元十份封顶</text>
        </view>

        <view class="flex border_radius_10 line_height_40 height_fixed_40 width_90 margin_auto text_center background_liner padding_top_10 padding_bottom_10">
            <view class="width_50 color_fff box_sizing" style="border-right:2rpx solid #fff">
                <text class="font_size_12">共计</text>
                <text class="font_size_18 font_weight_600">￥28.5</text>
            </view>
            <view class="width_50 color_fff font_size_18 font_weight_600" bindtap="toPageFn">
                <text>立即付款</text>
            </view>
        </view>

    </view>


</view>