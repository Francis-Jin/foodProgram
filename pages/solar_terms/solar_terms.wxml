<!--pages/solar_terms/solar_terms.wxml-->
<view class="bg_image">
    <image class="width_height_100" src="{{urlBefore + solarTermInfo.bgImage}}"></image>
</view>

<view class="container text_center import_content">

    <view class="padding_top_30 padding_bottom_5 color_666 font_size_16">
        <text>{{thisDate}}</text>
    </view>
     <view class="color_666 margin_bottom_10 font_size_16">
        <text>{{weekDay}}</text>
    </view>
    <view class="width_fixed_200 height_fixed_200 margin_auto">
        <!-- <image class="width_height_100" src=""></image> -->
    </view>
    <view class="flex flex_space_between box_sizing color_8484 padding_left_right_20 line_height_80 margin_top_80">
        <view class="width_60 text_right">
            <text class="margin_right_20">您的膳食方向 : </text>
            <text class="font_size_22 color_333">{{directionValue ? directionValue : '无'}}</text>
        </view>
        <view class="width_40 padding_top_5">
            <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                <text class="padding_top_5 padding_bottom_5 padding_left_right_20 background_yellow_liner border_radius_10 color_fff">修改</text>
            </picker>
        </view>
    </view>

    <view class="next background_yellow_liner border_radius_10 color_fff" bindtap="nextFn">
        <text>下一页</text>
    </view>



</view>